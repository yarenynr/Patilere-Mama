<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F6F3EF"
    tools:context=".authorized.AuthProductDetail">

    <ImageView
        android:id="@+id/iv_image"
        android:layout_width="wrap_content"
        android:layout_height="240dp"
        android:layout_marginBottom="34dp"
        android:layout_marginTop="20dp"
        app:layout_constraintBottom_toTopOf="@+id/et_productname"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/urunekle" />


    <EditText
        android:id="@+id/et_productname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="34dp"
        android:layout_marginEnd="15dp"
        android:minHeight="48dp"
        android:hint="Ürün adını giriniz."
        android:textSize="18sp"
        android:textColor="#746E65"
        android:textColorHint="#ADA7A0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_image" />

    <EditText
        android:id="@+id/et_productkilo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:textColor="#746E65"
        android:textColorHint="#ADA7A0"
        android:hint="Ürünün kilosunu (sayı) giriniz"
        android:minHeight="48dp"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/textView8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_productname" />

    <EditText
        android:id="@+id/et_productcost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:textColor="#746E65"
        android:layout_marginEnd="15dp"
        android:textColorHint="#ADA7A0"
        android:hint="Ürünün ücretini giriniz."
        android:minHeight="48dp"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/textView9"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_productkilo" />

    <Button
        android:id="@+id/btn_product_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="104dp"
        android:layout_marginTop="250dp"
        android:layout_marginEnd="105dp"
        android:layout_marginBottom="85dp"
        android:backgroundTint="#BBB1A4"
        android:text="Ürün Ekle"
        android:textColor="#503735"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_image" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="25dp"
        android:text="KG"
        android:textColor="#746E65"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/et_productkilo"
        app:layout_constraintTop_toBottomOf="@+id/et_productname" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="25dp"
        android:textColor="#746E65"
        android:text="TL"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/et_productcost"
        app:layout_constraintTop_toBottomOf="@+id/et_productkilo" />

</androidx.constraintlayout.widget.ConstraintLayout>